<%- include('header') %>

<div id="editUser" class="modal" aria-labelledby="editUserLabel" aria-hidden="true" role="dialog">
    <div class="container">
        <div class="row" style="justify-content: center;">
            <div class="col-lg-4 col-sm-7">

                <div class="card hovercard">
                    <div class="cardheader">

                    </div>
                    <div class="avatar">
                        <img alt="" src="img/<%= username %>.jpeg" id="avatar-img">
                        <input type="file"
                               id="avatar-select" name="avatar" class="hidden"
                               accept="image/png, image/jpeg, image/jpg">
                    </div>
                    <div class="info">
                        <div class="title mb-4">
                            <a href="#"><%= username %></a>
                        </div>
                        <div class="text-left px-3">
                            Change Your Password
                        </div>
                        <div class="input-group px-3">
                            <input type="password" id="change-password" placeholder="new password" class="form-control my-2 w-100">
                            <input type="password" id="change-password-rep" placeholder="confirm new password" class="form-control w-100">
                            <p class="error-box w-100 mt-2" id="edit-errorBox"></p>
                        </div>
                        <div class="mt-2 flex-row justify-content-between p-3 w-100">
                            <button class="btn btn-light" data-dismiss="modal" id="modalClose">
                                close
                            </button>
                            <button class="btn btn-primary" id="editButton"  username="<%= username %>">
                                Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<nav class="navbar navbar-dark navbar-expand-md" id="app-navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"></a>
        <button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1">
            <span class="sr-only">
                Toggle navigation
            </span>
            <span class="navbar-toggler-icon"></span></button>
        <img src="img/logo.png" style="width: 70px;">
        <span
                style="color: rgb(255,255,255);font-family: 'Montserrat Alternates', sans-serif;font-size: 26px;margin-left: 10px;font-weight: bold;">Chatty</span>
        <div class="collapse navbar-collapse" id="navcol-1">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item" role="presentation"></li>
                <li class="nav-item" type="button" role="presentation" data-toggle="modal" data-target="#editUser">
                    <a class="nav-link" href="#" style="color: white;opacity: 1;margin-right: 10px;border-right: 2px solid white;padding-right: 13px;">
                        <%= username %>
                    </a>
                </li>
                <li class="nav-item" role="presentation" id="logout"><a class="nav-link" href="#">Logout</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container-fluid h-100">
    <div class="row justify-content-center h-100">
        <div class="col-md-4 col-xl-3 chat">
            <div class="card mb-sm-3 mb-md-0 contacts_card">
                <div class="card-header">
                    <span class="online">
                        Online Users
                    </span>
                </div>
                <div class="card-body contacts_body">
                    <ui class="contacts">
                        <li class="active">
                            <div class="d-flex bd-highlight">
                                <div class="img_cont">
                                    <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg"
                                         class="rounded-circle user_img">
                                    <span class="online_icon"></span>
                                </div>
                                <div class="user_info">
                                    <span>Sadeq Sheikhi</span>
                                    <p>Sadeq is online</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex bd-highlight">
                                <div class="img_cont">
                                    <img src="img/rozh.jpeg"
                                         class="rounded-circle user_img">
                                    <span class="online_icon offline"></span>
                                </div>
                                <div class="user_info">
                                    <span>Rozhin Vatani</span>
                                    <p>Rozhin left 7 mins ago</p>
                                </div>
                            </div>
                        </li>
                    </ui>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>


        <div class="col-md-8 col-xl-6 chat">
            <div class="card">
                <div class="card-header msg_head">
                    <div class="d-flex bd-highlight">
                        <div class="user_info">
                            <span>Super Chat</span>
                            <p>1767 Messages</p>
                        </div>
                    </div>
                </div>
                <div class="card-body msg_card_body">
                    <div class="d-flex justify-content-start mb-4 align-items-center">
                        <div class="img_cont_msg">
                            <img src="img/rozh.jpeg"
                                 class="rounded-circle user_img_msg">
                        </div>
                        <div class="msg_cotainer">
                            <p>
                                sadeqsheikhi:
                            </p>
                            Hi, how are you samim?
                            <span class="msg_time">8:40 AM, Today</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mb-4">
                        <div class="msg_cotainer_send">
                            Hi Khalid i am good tnx how about you?
                            <span class="msg_time_send">8:55 AM, Today</span>
                        </div>
                        <div class="img_cont_msg">
                            <img src="img/rozh.jpeg"
                                 class="rounded-circle user_img_msg">
                        </div>
                    </div>
                </div>
                <div id="is-typing" class="pl-4 text-white-50">
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <textarea id="message" class="form-control type_msg"
                                  placeholder="Type your message..."></textarea>
                        <div class="input-group-append" id="send-message">
                            <span class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./footer'); %>
<!-- custom -->
<script src="soiof.js"></script>
<script src="app.js"></script>
</body>
</html>

